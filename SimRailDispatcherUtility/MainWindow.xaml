<Window x:Class="SimRailDispatcherUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRailDispatcherUtility"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1180"
        ResizeMode="NoResize">
    <Grid>
        <ListView x:Name="TrainTimers_ListView" Margin="10,60,10,10">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Delete" Click="DeleteSelected_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.Resources>
                <Style x:Key="DepartureCountdownTextStyle" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="Green"/>
                    <Style.Triggers>
                        <!-- overdue: <= 0 -->
                        <DataTrigger Binding="{Binding TimeToDeparture.TotalSeconds}" Value="0">
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>

                        <!-- < 60s: orange (ale > 0 řešíme tak, že tohle přebije green) -->
                        <DataTrigger Binding="{Binding TimeToDeparture.TotalSeconds}" Value="60">
                            <Setter Property="Foreground" Value="Orange"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Train Id" Width="90" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Previous Post" Width="170" DisplayMemberBinding="{Binding PreviousPost}"/>
                    <GridViewColumn Header="Next Post" Width="170" DisplayMemberBinding="{Binding NextPost}"/>
                    <GridViewColumn Header="Track #" Width="60" DisplayMemberBinding="{Binding TrackNumber}"/>
                    <GridViewColumn Header="Departure" Width="130" DisplayMemberBinding="{Binding DepartureTimeString}"/>

                    <!-- NEW -->
                    <GridViewColumn Header="T-Departure" Width="90" DisplayMemberBinding="{Binding TimeToDepartureString}"/>
                    <GridViewColumn Header="T-Reminder" Width="90" DisplayMemberBinding="{Binding TimeToReminderString}"/>
                    <GridViewColumn Header="State" Width="90" DisplayMemberBinding="{Binding StateString}"/>

                    <GridViewColumn Header="Stop Type" Width="90" DisplayMemberBinding="{Binding StopTypeString}"/>
                    <GridViewColumn Header="Train Type" Width="90" DisplayMemberBinding="{Binding TrainTypeString}"/>
                    <GridViewColumn Header="Driven" Width="70" DisplayMemberBinding="{Binding IsDrivenByStr}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="AddTrain_Button" Content="Button" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Height="33" Width="96" Click="AddTrain_Button_Click"/>

    </Grid>
</Window>

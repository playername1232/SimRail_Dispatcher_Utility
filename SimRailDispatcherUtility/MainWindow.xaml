<Window x:Name="TimeTable_Window"
        x:Class="SimRailDispatcherUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SimRail Dispatcher Utility"
        Height="600"
        Width="1300"
        ResizeMode="CanMinimize"
        Loaded="TimeTable_Window_Loaded"
        Background="#0F1115">

    <Window.Resources>

        <!-- Header Style -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#0F1115"/>
            <Setter Property="Foreground" Value="#B9C0D0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#2A3140"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- Countdown style based on State -->
        <Style x:Key="CountdownStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7EE787"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding State}" Value="Departed">
                    <Setter Property="Foreground" Value="#FF6B6B"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State}" Value="Departing">
                    <Setter Property="Foreground" Value="#FFA657"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State}" Value="ReminderDue">
                    <Setter Property="Foreground" Value="#FFD166"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0"
                Background="#161A22"
                CornerRadius="12"
                Padding="12"
                BorderBrush="#2A3140"
                BorderThickness="1">

            <DockPanel LastChildFill="True">

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <TextBlock Text="SimRail Dispatcher Utility"
                               Foreground="#E6EAF2"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,20,0"/>

                    <Button x:Name="AddTrain_Button"
                            Content="Add Train"
                            Width="110"
                            Height="32"
                            Click="AddTrain_Button_Click"
                            Background="#2D6CDF"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <TextBlock Text="Station:"
                               Foreground="#B9C0D0"
                               Margin="20,0,6,0"
                               VerticalAlignment="Center"/>

                    <ComboBox x:Name="SelectedStation_ComboBox"
                              Width="240"
                              Height="32"
                              SelectionChanged="SelectedStation_ComboBox_SelectionChanged"
                              BorderThickness="1"
                              Padding="6,2"
                              VerticalContentAlignment="Center"/>
                </StackPanel>

                <TextBlock DockPanel.Dock="Right"
                           Text="Right-click row → Delete"
                           Foreground="#7F8AA3"
                           Margin="10, 0, 0, 0"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Table Card -->
        <Border Grid.Row="2"
                Background="#161A22"
                CornerRadius="12"
                Padding="10"
                BorderBrush="#2A3140"
                BorderThickness="1">

            <ListView x:Name="TrainTimers_ListView"
                      AlternationCount="2"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#E6EAF2"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">

                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete"
                                  Click="DeleteSelected_Click"/>
                    </ContextMenu>
                </ListView.ContextMenu>

                <!-- Row Style -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="6,4"/>
                        <Setter Property="Margin" Value="0,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="#141925"/>
                        <Setter Property="BorderBrush" Value="#20283A"/>
                        <Setter Property="BorderThickness" Value="1"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1B2232"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#22304A"/>
                                <Setter Property="BorderBrush" Value="#2D6CDF"/>
                            </Trigger>

                            <!-- Zebra -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#121724"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Train Id" Width="90"
                                        DisplayMemberBinding="{Binding Id}"/>

                        <GridViewColumn Header="Previous Post" Width="170"
                                        DisplayMemberBinding="{Binding PreviousPost}"/>

                        <GridViewColumn Header="Next Post" Width="170"
                                        DisplayMemberBinding="{Binding NextPost}"/>

                        <GridViewColumn Header="Track #" Width="70"
                                        DisplayMemberBinding="{Binding TrackNumber}"/>

                        <GridViewColumn Header="Departure" Width="140"
                                        DisplayMemberBinding="{Binding DepartureTimeString}"/>

                        <GridViewColumn Header="T-Departure" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TimeToDepartureString}"
                                               Style="{StaticResource CountdownStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="T-Reminder" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TimeToReminderString}"
                                               Style="{StaticResource CountdownStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="State" Width="100"
                                        DisplayMemberBinding="{Binding StateString}"/>

                        <GridViewColumn Header="Stop Type" Width="100"
                                        DisplayMemberBinding="{Binding StopTypeString}"/>

                        <GridViewColumn Header="Train Type" Width="100"
                                        DisplayMemberBinding="{Binding TrainTypeString}"/>

                        <GridViewColumn Header="Driven" Width="80"
                                        DisplayMemberBinding="{Binding IsDrivenByStr}"/>
                    </GridView>
                </ListView.View>

            </ListView>
        </Border>
    </Grid>
</Window>
<Window x:Class="SimRailDispatcherUtility.Windows.AddTrainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:SimRailDispatcherUtility.Helpers"
        mc:Ignorable="d"
        Title="Add Train"
        Height="550" Width="920"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        Background="#0F1115">

    <Window.Resources>
        <!-- Card -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#161A22"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="BorderBrush" Value="#2A3140"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B9C0D0"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- Inputs -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#0F1115"/>
            <Setter Property="Foreground" Value="#E6EAF2"/>
            <Setter Property="BorderBrush" Value="#2A3140"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CaretBrush" Value="#E6EAF2"/>
            <Setter Property="SelectionBrush" Value="#22304A"/>

            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#0F1115"/>
                    <Setter Property="Foreground" Value="#7F8AA3"/>
                    <Setter Property="BorderBrush" Value="#2A3140"/>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>

                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2D6CDF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Background" Value="#2D6CDF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Background" Value="#20283A"/>
            <Setter Property="Foreground" Value="#E6EAF2"/>
            <Setter Property="BorderBrush" Value="#2A3140"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E6EAF2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="12">
            <StackPanel>
                <TextBlock Text="Add train"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#E6EAF2"/>
                <TextBlock Text="Fill the details and save."
                           Foreground="#7F8AA3"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Form -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- rows -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Train Id -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Train ID"/>
                        <TextBox x:Name="TrainId_TextBox"
                                 Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="Numeric ID (e.g., 11111)"/>

                        <!-- Previous Post -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Previous post"/>
                        <ComboBox x:Name="PreviousPost_ComboBox"
                                  Grid.Row="2" Grid.Column="1"
                                  Height="32"
                                  BorderThickness="1"
                                  Padding="6,2"
                                  IsTextSearchEnabled="True"
                                  TextSearch.TextPath="."
                                  ToolTip="Choose or type station"
                                  VerticalContentAlignment="Center"/>

                        <!-- Next Post -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Next post"/>
                        <ComboBox x:Name="NextPost_ComboBox"
                                  Grid.Row="4" Grid.Column="1"
                                  Height="32"
                                  BorderThickness="1"
                                  Padding="6,2"
                                  IsTextSearchEnabled="True"
                                  TextSearch.TextPath="."
                                  ToolTip="Choose or type station"
                                  VerticalContentAlignment="Center"/>

                        <!-- Track -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Track #"/>
                        <TextBox x:Name="Track_TextBox"
                                 Grid.Row="6" Grid.Column="1"
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="Short (e.g., 4)"/>

                        <!-- Departure -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Departure"/>
                        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal">
                            <DatePicker x:Name="DepartureDate_DatePicker"
                                        Width="120"
                                        Height="32"
                                        BorderThickness="1"/>
                            <TextBlock Text=" " Width="8"/>
                            <TextBox x:Name="DepartureTime_TextBox"
                                     Width="80"
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Time: HH:mm or HH:mm:ss (e.g., 01:10:00)"/>
                            <TextBlock VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Foreground="#7F8AA3"
                                       Text="HH:mm .eg. 12:37"/>
                        </StackPanel>

                        <!-- Reminder offset -->
                        <TextBlock Grid.Row="10" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Remind before"/>
                        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="ReminderMinutes_TextBox"
                                     Width="110"
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Minutes (e.g., 1)"/>
                            <TextBlock VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Foreground="#7F8AA3"
                                       Text="minutes"/>
                        </StackPanel>

                        <TextBlock Grid.Row="12" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Types"/>
                        <Grid Grid.Row="12" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="TrainType_ComboBox"
                                      Grid.Column="0"
                                      Height="32"
                                      BorderThickness="1"
                                      Padding="6,2"
                                      ItemsSource="{Binding Source={x:Static helpers:TrainTypeValues.All}}"
                                      ToolTip="Select train type"
                                      VerticalContentAlignment="Center"/>

                            <ComboBox x:Name="StopType_ComboBox"
                                      Grid.Column="2"
                                      Height="32"
                                      BorderThickness="1"
                                      Padding="6,2"
                                      ItemsSource="{Binding Source={x:Static helpers:StopTypeValues.All}}"
                                      ToolTip="Select stop type"
                                      VerticalContentAlignment="Center"/>
                        </Grid>

                        <!-- Driven by -->
                        <TextBlock Grid.Row="14" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Driven by"/>
                        <CheckBox x:Name="DrivenBy_CheckBox"
                                  Grid.Row="14" Grid.Column="1"
                                  Content="Player drives this train"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- RIGHT: Preview -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Preview"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#E6EAF2"
                               Margin="0,0,0,10"/>

                    <Border Padding="12" CornerRadius="10" Background="#0F1115" BorderBrush="#2A3140" BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="#E6EAF2" Margin="0,0,0,6">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Train {0}">
                                        <Binding ElementName="TrainId_TextBox" Path="Text"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <TextBlock Foreground="#B9C0D0" Margin="0,0,0,10">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} → {1}">
                                        <Binding ElementName="PreviousPost_ComboBox" Path="Text"/>
                                        <Binding ElementName="NextPost_ComboBox" Path="Text"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <UniformGrid Columns="2">
                                <TextBlock Text="Track:" Foreground="#7F8AA3"/>
                                <TextBlock Text="{Binding ElementName=Track_TextBox, Path=Text}" Foreground="#E6EAF2"/>

                                <TextBlock Text="Departure:" Foreground="#7F8AA3"/>
                                <TextBlock Foreground="#E6EAF2">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0:d} {1}">
                                            <Binding ElementName="DepartureDate_DatePicker" Path="SelectedDate"/>
                                            <Binding ElementName="DepartureTime_TextBox" Path="Text"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Text="Stop:" Foreground="#7F8AA3"/>
                                <TextBlock Text="{Binding ElementName=StopType_ComboBox, Path=Text}" Foreground="#E6EAF2"/>

                                <TextBlock Text="Type:" Foreground="#7F8AA3"/>
                                <TextBlock Text="{Binding ElementName=TrainType_ComboBox, Path=Text}" Foreground="#E6EAF2"/>

                                <TextBlock Text="Driven:" Foreground="#7F8AA3"/>
                                <TextBlock Foreground="#E6EAF2">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="AI"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=DrivenBy_CheckBox, Path=IsChecked}" Value="True">
                                                    <Setter Property="Text" Value="Player"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="Remind:" Foreground="#7F8AA3"/>
                                <TextBlock Foreground="#E6EAF2">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} min before">
                                            <Binding ElementName="ReminderMinutes_TextBox" Path="Text"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <TextBlock Margin="0,12,0,0"
                               Foreground="#7F8AA3"
                               TextWrapping="Wrap"
                               Text="Tip: Keep it simple. Make it work, then polish later."/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer buttons -->
        <Border Grid.Row="2" Margin="0,12,0,0" Background="Transparent">
            <DockPanel LastChildFill="False">
                <TextBlock DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           Foreground="#7F8AA3"
                           Text="Enter values and click Save."/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="Cancel_Button"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,10,0"
                            IsCancel="True"
                            Click="Cancel_Button_Click"/>

                    <Button x:Name="Save_Button"
                            Content="Save"
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsDefault="True"
                            Click="Save_Button_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
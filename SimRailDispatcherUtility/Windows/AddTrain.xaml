<Window x:Class="SimRailDispatcherUtility.Windows.AddTrain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRailDispatcherUtility.Windows"
        xmlns:helpers="clr-namespace:SimRailDispatcherUtility.Helpers"
        mc:Ignorable="d"
        Title="Add Train"
        Height="550" Width="920"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Add train" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Fill the details and save." Margin="12,6,0,0" Opacity="0.7"/>
        </DockPanel>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Form -->
            <Border Grid.Column="0" Padding="14" CornerRadius="8" BorderBrush="#33000000" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>

                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Train Id -->
                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Train ID" Opacity="0.8"/>
                        <TextBox x:Name="TrainId_TextBox"
         Grid.Row="0" Grid.Column="1" Height="30"
         ToolTip="Numeric ID (e.g., 11111)"/>

                        <!-- Previous Post (dropdown) -->
                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Previous post" Opacity="0.8"/>
                        <ComboBox x:Name="PreviousPost_ComboBox"
          Grid.Row="2" Grid.Column="1" Height="30"
          IsEditable="True"
          IsTextSearchEnabled="True"
          TextSearch.TextPath="."
          ToolTip="Choose or type station" />

                        <!-- Next Post (dropdown) -->
                        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Next post" Opacity="0.8"/>
                        <ComboBox x:Name="NextPost_ComboBox"
          Grid.Row="4" Grid.Column="1" Height="30"
          IsEditable="True"
          IsTextSearchEnabled="True"
          TextSearch.TextPath="."
          ToolTip="Choose or type station" />

                        <!-- Track -->
                        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Track #" Opacity="0.8"/>
                        <TextBox x:Name="Track_TextBox"
         Grid.Row="6" Grid.Column="1"
         Width="90" Height="30"
         ToolTip="Short (e.g., 4)" Margin="0,0,243,0"/>

                        <!-- Departure -->
                        <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Departure" Opacity="0.8"/>
                        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal">
                            <DatePicker x:Name="DepartureDate_DatePicker" Width="150" Height="30"/>
                            <TextBlock Text=" " Width="8"/>
                            <TextBox x:Name="DepartureTime_TextBox" Width="120" Height="30" ToolTip="Time: HH:mm or HH:mm:ss (e.g., 01:10:00)"/>
                        </StackPanel>

                        <!-- Reminder offset -->
                        <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Remind before" Opacity="0.8"/>
                        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="ReminderMinutes_TextBox" Width="93" Height="30" ToolTip="Minutes (e.g., 1)"/>
                            <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Opacity="0.6" Text="minutes"/>
                        </StackPanel>
                        
                        <ComboBox x:Name="StopType_ComboBox"
                            IsEditable="True"
                            IsReadOnly="True"
                            Text="Select stop type..."
                            ItemsSource="{Binding Source={x:Static helpers:StopTypeValues.All}}" Grid.Column="1" Margin="45,43,128,-57" Grid.Row="16"/>

                        <ComboBox x:Name="TrainType_ComboBox"
                            IsEditable="True"
                            IsReadOnly="True"
                            Text="Select train type..."
                            ItemsSource="{Binding Source={x:Static helpers:TrainTypeValues.All}}" Margin="0,43,0,-57" Grid.Row="16"/>

                        <!-- Driven by -->
                        <TextBlock Grid.Row="16" Grid.Column="0" VerticalAlignment="Center" Text="Driven by" Opacity="0.8"/>
                        <CheckBox x:Name="DrivenBy_CheckBox"
                          Grid.Row="16" Grid.Column="1"
                          Content="Player drives this train"
                          VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- RIGHT: Preview -->
            <Border Grid.Column="2" Padding="14" CornerRadius="8" BorderBrush="#33000000" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Preview" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <Border Padding="12" CornerRadius="8" Background="#0A000000" BorderBrush="#22000000" BorderThickness="1">
                        <StackPanel>
                            <!-- Title -->
                            <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,6">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Train {0}">
                                        <Binding ElementName="TrainId_TextBox" Path="Text"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- Route -->
                            <TextBlock Opacity="0.8" Margin="0,0,0,8">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} → {1}">
                                        <Binding ElementName="PreviousPost_ComboBox" Path="Text"/>
                                        <Binding ElementName="NextPost_ComboBox" Path="Text"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <UniformGrid Columns="2">
                                <TextBlock Text="Track:" Opacity="0.6"/>
                                <TextBlock Text="{Binding ElementName=Track_TextBox, Path=Text}"/>

                                <TextBlock Text="Departure:" Opacity="0.6"/>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0:d} {1}">
                                            <Binding ElementName="DepartureDate_DatePicker" Path="SelectedDate"/>
                                            <Binding ElementName="DepartureTime_TextBox" Path="Text"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Text="Stop:" Opacity="0.6"/>
                                <TextBlock Text="{Binding ElementName=StopType_ComboBox, Path=Text}"/>

                                <TextBlock Text="Type:" Opacity="0.6"/>
                                <TextBlock Text="{Binding ElementName=TrainType_ComboBox, Path=Text}"/>

                                <TextBlock Text="Driven:" Opacity="0.6"/>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="AI"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=DrivenBy_CheckBox, Path=IsChecked}" Value="True">
                                                    <Setter Property="Text" Value="Player"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="Remind:" Opacity="0.6"/>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} min before">
                                            <Binding ElementName="ReminderMinutes_TextBox" Path="Text"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <TextBlock Margin="0,12,0,0" Opacity="0.65" TextWrapping="Wrap">
                        Tip: You can bind this preview to your view model later (e.g., Selected values).
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer buttons -->
        <DockPanel Grid.Row="2" Margin="0,12,0,0" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Opacity="0.6"
                       Text="Enter values and click Save."/>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="Cancel_Button" Content="Cancel" Width="110" Height="34" Margin="0,0,10,0" IsCancel="True" Click="Cancel_Button_Click"/>
                <Button x:Name="Save_Button" Content="Save" Width="110" Height="34" IsDefault="True" Click="Save_Button_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>